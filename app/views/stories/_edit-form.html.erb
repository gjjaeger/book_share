<%=form_for(@story) do |f|%>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field first_input form-group">
    <%= f.label :Title, :class =>"control-label" %>
    <%= f.text_field :name, :class => "form-control"%>
  </div>

  <div class="field form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control", :row => "5" %>
    <small id="descriptionHelp" class="form-text text-muted">Describe your book for future collaborators.</small>
  </div>

  <%= f.hidden_field :user_id, :value => @user %>

  <div class="actions">
    <%= f.submit "Update", :class => "btn btn-primary"%>
  </div>
<% end %>
