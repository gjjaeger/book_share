
<%= form_for [@story, sentence] do |f| %>
  <% if sentence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sentence.errors.count, "error") %> prohibited this sentence from being saved:</h2>

      <ul>
      <% sentence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control contribution"%>
  </div>

  <%= f.hidden_field :story_id, :value => @story.id %>

  <%= f.hidden_field :user_id, :value => @user %>


  <div class="actions">
    <%= f.submit "Submit Contribution", :class => "btn"%>
  </div>
<% end %>
